    "version": "0.2.0",
    "configurations": [
        
        {
            "type": "node",
            "request": "launch",
            "name": "Debug API",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "start:dev",
                "api"
            ],
            "cwd": "${workspaceFolder}",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "console": "integratedTerminal",
            "restart": true,
            "sourceMaps": true,
            "outFiles": [
                "${workspaceFolder}/dist/apps/api/**/*.js"
            ],
            "envFile": "${workspaceFolder}/.env.development",
           
        }
    ]
}


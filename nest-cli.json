{
	"$schema": "https://json.schemastore.org/nest-cli",
	"collection": "@nestjs/schematics",
	"sourceRoot": ".",
	"root": ".",
	"monorepo": true,
	"compilerOptions": {
		"deleteOutDir": true,
		"webpack": false
	},
	"projects": {
		"api": {
			"type": "application",
			"root": "apps/api",
			"entryFile": "main",
			"sourceRoot": "apps/api/src",
			"compilerOptions": {
				"tsConfigPath": "apps/api/tsconfig.app.json"
			}
		},
		"mailer": {
			"type": "application",
			"root": "apps/mailer",
			"entryFile": "main",
			"sourceRoot": "apps/mailer/src",
			"compilerOptions": {
				"tsConfigPath": "apps/mailer/tsconfig.app.json"
			}
		}
	}
}
